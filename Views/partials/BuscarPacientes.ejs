<form method="GET" action="/pacientes/filter/page=1">
  <div class="form-row busca-simples">
    <div class="col">
      <label class="form-label" for="matricula">Matricula</label>
      <input type="text" class="form-control" id="matricula" name="matricula" placeholder="MATRICULA"
        onblur="validarMatricula(this, this.value)" onkeyup="mascaraMatricula(this, this.value)" maxlength="8" <%
        if(idPagina===2){%>
      value="<%=filterMatricula%>"
        <%}%>>
    </div>
    <div class="col">
      <label class="form-label" for="data">Data Inicial</label>
      <input type="date" name="data" id="data" class="form-control" <% if(idPagina===2){%>
      value="<%=filterData%>"
        <%}%>>
    </div>
    <div class="col">
      <label class="form-label" for="data2">Data Final</label>
      <input type="date" name="data2" id="data2" class="form-control" <% if(idPagina===2){%>
      value="<%=filterDataFinal%>"
        <%}%>>
    </div>
    <div class="col">
      <label class="form-label" for="status">Status</label>
      <select type="text" name="status" id="status" class="form-control">
        <% if(idPagina===2){%>
          <option selected id="optionStatusSelected">
            <%=filterStatus%>
          </option>
          <%}%>
            <option></option>
            <option id='optionStatusAguard'>AGUARDANDO</option>
            <option>RESOLVIDO</option>
            <option>FECHADO</option>
            <option>DELETADO</option>
      </select>
    </div>
    <div class="col">
      <label class="form-label" for="especialidade">Especialidade</label>
      <select type="text" name="especialidade" id="especialidade" class="form-control">
        <% if(idPagina===2){%>
          <option selected id="statusEspecSelected">
            <%=filterEspecialidade%>
          </option>
          <%}%>
            <option id="statusEspecVazio"></option>
      </select>
    </div>
  </div>
  <div class="form-row busca-nome">
    <div class="col-6">
      <label class="form-label" for="nome">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" placeholder="JOAO PEDRO SILVA"
        onblur="validarNome(this,this.value)" maxlength="70" <% if(idPagina===2){%>
      value="<%=filterNome%>"
        <%}%>>
    </div>
    <div class="caixa-botao">
      <button type="submit" class="btn btn-primary botao-pesquisar">Buscar</button>
    </div>
    <div class="caixa-botao">
      <button type="button" class="btn btn-primary btn-warning botao-limpar" onclick="limparFormBusca()">Limpar</button>
    </div>
  </div>


</form>